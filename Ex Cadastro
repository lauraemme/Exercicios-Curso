<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ex2 Cadastro</title>
</head>
<body>
    <main>
        <h1>Cadastro</h1>
        <form>
            <input type="text">
            <button type="submit"> Add User </button>
        </form>
        <section>
            <h2>Lista de Usu√°rios</h2>
            <ul></ul>
        </section>
    </main>
    <script>

        const form = document.querySelector('form');
        form.addEventListener('submit',function(evt){
                evt.preventDefault();
        });

        function createBtnRemove (item) {
            const btnRemove = document.createElement('button');

            btnRemove.textContent = 'Remove';

            btnRemove.onclick = function (){
                item.remove();
            };

            return btnRemove;
        };

        function createUser (){
            const userList = document.querySelector('ul');
            const userName = document.querySelector('input');
            const userItem = document.createElement('li');

            userList.appendChild(userItem);
            userItem.textContent = userName.value;

            userItem.appendChild(createBtnRemove(userItem));

            userName.value = '';
        };

        const btnAddUser = document.querySelector('button[type="submit"]');
        btnAddUser.addEventListener('click',createUser);

    </script>
</body>
</html>
